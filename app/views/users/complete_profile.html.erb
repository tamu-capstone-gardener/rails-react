<div class="max-w-3xl mx-auto flex flex-col justify-start items-start p-6">
    <h1 class="text-2xl font-bold mb-4 theme-text-primary">Complete Your Profile</h1>

    <%= form_with model: current_user, url: complete_profile_path, method: :patch, local: true do |f| %>
    <div class="mb-4">
        <%= f.label :zip_code, "Zip Code", class: "block font-semibold mb-2" %>
        <%= f.text_field :zip_code, class: "w-full px-4 py-2 rounded-lg border border-gray-300" %>
    </div>

    <div>
        <%= f.submit "Save", class: "btn-primary px-4 py-2 rounded-lg" %>
    </div>
    <% end %>
</div>
